<div class="container jumbtron">
  <div class="row">
    <div class="col-12 mt-3">
      <h1 style="text-align:center">#<%= @chatroom.name %></h1>
      <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
        <% @chatroom.messages.each do |message| %>
          <%= render 'messages/message', message: message %>
        <% end %>
      </div>
      <% if current_user %>
        <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
          <div class="group mb-3">
            <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}" %>
          </div>
        <% end %>
      <% else %>
        <p style="text-align:center">You need to be <%= link_to 'Signed in', new_user_session_path %> in order to chat!</p>
      <% end %>
    </div>
  </div>
</div>
